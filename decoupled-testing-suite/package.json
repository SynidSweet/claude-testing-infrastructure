{
  "name": "decoupled-testing-suite",
  "version": "1.0.0",
  "description": "A standalone, updatable testing repository that can test any compatible project without requiring modifications to the project's source code",
  "main": "index.js",
  "scripts": {
    "init": "node scripts/init-project.js",
    "discover": "node scripts/discover-project.js",
    "test": "node scripts/run-tests.js",
    "test-current-project": "node scripts/run-tests.js --current",
    "analyze": "node scripts/analyze-project.js",
    "update": "node scripts/safe-update.js",
    "validate": "node scripts/validate-setup.js",
    "migrate": "node scripts/migrate-config.js",
    "check-compatibility": "node scripts/check-compatibility.js",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "test-suite": "jest --config jest.config.js",
    "coverage": "jest --coverage",
    "docs": "jsdoc -c jsdoc.config.json"
  },
  "keywords": [
    "testing",
    "decoupled",
    "standalone",
    "test-suite",
    "ai-agent",
    "javascript",
    "typescript",
    "python",
    "jest",
    "pytest",
    "playwright",
    "cypress",
    "tdd",
    "test-driven-development"
  ],
  "author": "Decoupled Testing Suite Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "cosmiconfig": "^7.0.1",
    "execa": "^5.1.1",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsdoc": "^39.6.2",
    "husky": "^8.0.2",
    "jest": "^29.2.2",
    "jsdoc": "^4.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  },
  "peerDependencies": {
    "cypress": ">=10.0.0",
    "jest": ">=27.0.0",
    "playwright": ">=1.20.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decoupled-testing-suite/core.git"
  },
  "bugs": {
    "url": "https://github.com/decoupled-testing-suite/core/issues"
  },
  "homepage": "https://github.com/decoupled-testing-suite/core#readme",
  "files": [
    "config/",
    "core/",
    "templates/",
    "scripts/",
    "docs/",
    "index.js",
    "README.md",
    "CHANGELOG.md"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "core/**/*.js",
      "config/**/*.js",
      "scripts/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
