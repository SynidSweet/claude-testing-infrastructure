#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Pre-commit hook with comprehensive dependency validation
echo "ğŸ” Running pre-commit checks with dependency validation..."

# Run dependency validation first (fast check)
echo "ğŸ“¦ Validating dependencies..."
npm run validate:dependencies

# If dependency validation fails, stop here
if [ $? -ne 0 ]; then
    echo "âŒ Dependency validation failed. Please fix dependency issues before committing."
    echo "ğŸ’¡ Run 'npm run validate:dependencies' for detailed information."
    exit 1
fi

# Run standard pre-commit checks
echo "ğŸ”§ Running quality checks..."
npm run precommit

# Run truth validation
echo "ğŸ” Validating documentation claims against reality..."
npm run truth-validation:precommit

echo "âœ… All pre-commit checks passed!"