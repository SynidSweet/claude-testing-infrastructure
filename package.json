{
  "name": "claude-testing-infrastructure",
  "version": "2.0.0",
  "description": "AI-powered decoupled testing infrastructure that generates comprehensive tests without modifying target projects",
  "main": "dist/index.js",
  "bin": {
    "claude-testing": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ai-validation": "jest --config jest.ai-validation.config.js",
    "test:ai-quick": "jest --config jest.ai-validation.config.js --testNamePattern='Critical'",
    "validation:report": "node scripts/generate-validation-report.js",
    "validation:production": "node scripts/production-readiness-check.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}'",
    "prebuild": "rimraf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "testing",
    "ai",
    "claude",
    "test-generation",
    "decoupled",
    "infrastructure"
  ],
  "author": "Claude Testing Infrastructure Team",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.24.0",
    "@babel/traverse": "^7.24.0",
    "@babel/types": "^7.24.0",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "ignore": "^5.3.2",
    "ora": "^5.4.1",
    "simple-git": "^3.22.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@types/babel__traverse": "^7.20.5",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "CLAUDE.md",
    "LICENSE"
  ]
}
