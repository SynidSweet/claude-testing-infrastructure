{
  "name": "claude-testing-infrastructure",
  "version": "2.0.0",
  "description": "AI-powered decoupled testing infrastructure that generates comprehensive tests without modifying target projects",
  "main": "dist/index.js",
  "bin": {
    "claude-testing": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:fast": "jest --config jest.unit.config.js",
    "test:unit": "jest --config jest.unit.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:optimized": "jest --config jest.optimized.config.js",
    "test:core": "npm run test:unit && npm run test:integration",
    "test:core-optimized": "jest --config jest.performance.config.js --testPathIgnorePatterns='validation/ai-agents|fixtures/.*\\.claude-testing'",
    "test:core-old": "jest --testPathIgnorePatterns='validation/ai-agents|fixtures/.*\\.claude-testing' --testTimeout=15000 --detectOpenHandles --forceExit",
    "test:full": "jest --config jest.performance.config.js",
    "test:ci": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ai-validation": "jest --config jest.ai-validation.config.js",
    "test:ai-quick": "jest --config jest.ai-validation.config.js --testNamePattern='Critical'",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:e2e-verbose": "jest --config jest.e2e.config.js --verbose",
    "validation:report": "node scripts/generate-validation-report.js",
    "validation:production": "node scripts/production-readiness-check.js",
    "validation:production:enhanced": "node scripts/production-readiness-check-enhanced.js",
    "validation:production:json": "node scripts/production-readiness-check.js --json",
    "validation:e2e": "npm run build && npm run test:e2e",
    "validation:deployment": "node scripts/production-deployment-checklist.js",
    "validate:truth": "node scripts/truth-validation-engine.js",
    "validate:truth:detailed": "node scripts/truth-validation-engine.js --detailed",
    "validate:truth:json": "node scripts/truth-validation-engine.js --json",
    "validate:truth:strict": "node scripts/truth-validation-engine.js --strict --detailed",
    "validate:blockers": "node scripts/test-suite-blocker-detector.js",
    "validate:blockers:json": "node scripts/test-suite-blocker-detector.js --json",
    "validate:infrastructure": "node scripts/infrastructure-blocker-detector.js",
    "validate:infrastructure:json": "node scripts/infrastructure-blocker-detector.js --json",
    "validate:code-quality": "node scripts/code-quality-blocker-detector.js",
    "validate:code-quality:json": "node scripts/code-quality-blocker-detector.js --json",
    "truth-validation:precommit": "node scripts/precommit-truth-validation.js",
    "status:update": "node scripts/status-documentation-updater.js",
    "status:update:dry-run": "node scripts/status-documentation-updater.js --dry-run",
    "status:update:commit": "node scripts/status-documentation-updater.js --commit",
    "status:update:verbose": "node scripts/status-documentation-updater.js --verbose",
    "perf:monitor": "node scripts/jest-performance-monitor.js",
    "perf:benchmark": "npm run perf:monitor",
    "e2e:validate": "node tests/e2e/run-e2e-validation.js",
    "e2e:full": "npm run build && node tests/e2e/run-e2e-validation.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}'",
    "prebuild": "rimraf dist",
    "prepare": "husky",
    "precommit": "npm run quality:check && npm run test:fast",
    "precommit:enhanced": "npm run quality:check && npm run type-safety:check && npm run test:fast",
    "precommit:truth-validation": "npm run quality:check && npm run test:fast && npm run truth-validation:precommit",
    "quality:check": "npm run lint && npm run format:check && npm run build:check",
    "build:check": "tsc --noEmit",
    "type-safety:check": "node scripts/type-safety-check.js",
    "type-safety:strict": "TYPE_SAFETY_STRICT=true node scripts/type-safety-check.js",
    "type-safety:report": "node scripts/type-safety-check.js && cat .type-safety-summary.md",
    "test:local-comprehensive": "npm test"
  },
  "keywords": [
    "testing",
    "ai",
    "claude",
    "test-generation",
    "decoupled",
    "infrastructure"
  ],
  "author": "Claude Testing Infrastructure Team",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.24.0",
    "@babel/traverse": "^7.24.0",
    "@babel/types": "^7.24.0",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "ignore": "^5.3.2",
    "ora": "^5.4.1",
    "simple-git": "^3.22.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@types/babel__traverse": "^7.20.5",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "memfs": "^4.17.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "CLAUDE.md",
    "LICENSE"
  ]
}
