{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@cli/*": ["cli/*"],
      "@analyzers/*": ["analyzers/*"],
      "@generators/*": ["generators/*"],
      "@runners/*": ["runners/*"],
      "@adapters/*": ["adapters/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "archive", "tests/e2e/test-projects/**", "tests/fixtures/**", "tests/generators/TestGeneratorFactory.test.ts", "tests/generators/templates/**", "tests/types/**", "tests/utils/typed-test-fixtures.ts", "tests/ai/ClaudeOrchestrator.stderr.test.ts", "tests/ai/ProcessPoolManager.test.ts", "tests/ai/performance-comparison.test.ts", "tests/validation/**"]
}